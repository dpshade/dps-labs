<style>
  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
  }

  @media (max-width: 900px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: var(--space-10);
    }
  }

  .section-label {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-accent-gold);
    margin-bottom: var(--space-3);
  }

  .about-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    margin-bottom: var(--space-6);
  }

  .about-text {
    margin-bottom: var(--space-8);
  }

  .about-text p {
    font-size: 1rem;
    color: var(--color-ink-light);
    line-height: 1.7;
    margin-bottom: var(--space-4);
  }

  .about-text p:last-child {
    margin-bottom: 0;
  }

  .about-traits {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-4);
  }

  @media (max-width: 480px) {
    .about-traits {
      grid-template-columns: 1fr;
    }
  }

  .trait {
    padding: var(--space-4);
    background: var(--color-surface);
    border: 1px solid var(--color-border-subtle);
    border-radius: var(--radius-md);
  }

  .trait-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-ink);
    margin-bottom: var(--space-1);
  }

  .trait-desc {
    font-size: 0.75rem;
    color: var(--color-ink-muted);
  }

  .about-image-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
  }

  @media (max-width: 900px) {
    .about-image-wrapper {
      order: -1;
    }
  }

  .about-image {
    position: relative;
    width: 100%;
    max-width: 400px;
  }

  .about-image::before {
    content: '';
    position: absolute;
    inset: -30px;
    background: radial-gradient(
      ellipse at center,
      var(--color-accent-gold-dim),
      transparent 70%
    );
    z-index: 0;
    opacity: 0.6;
  }

  .about-image img {
    position: relative;
    width: 100%;
    border-radius: var(--radius-lg);
    filter: contrast(1.05) saturate(0.95);
    z-index: 1;
  }

  .about-image::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 40%;
    background: linear-gradient(to top, var(--color-paper-dark), transparent);
    border-radius: 0 0 var(--radius-lg) var(--radius-lg);
    z-index: 2;
    pointer-events: none;
  }
</style>
