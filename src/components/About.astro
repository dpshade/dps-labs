<section class="about-section">
  <div class="about-layout">
    <!-- Content on left -->
    <div class="about-content">
      <h2 class="about-title">Dylan Shade</h2>
      <p class="about-tagline">Software Engineer & Composer</p>
      
      <div class="about-text">
        <p>
          I build technology for a God-centered future. Tools that empower purposeful living, not addiction.
        </p>
        <p>
          2x JPMorgan Hackathon Champion. 25,000+ app users. Award-winning LLM solutions. Documentation infrastructure for the decentralized web.
        </p>
        <p>
          Product-focused engineer bridging complex technology and business value. Outcomes over output.
        </p>
        <p>
          University of Kentucky CS, Music Minor. AWS Certified. Choral composer. Album producer.
        </p>
      </div>

      <div class="about-stats">
        <div class="stat">
          <span class="stat-value">25K+</span>
          <span class="stat-label">Users</span>
        </div>
        <div class="stat">
          <span class="stat-value">2x</span>
          <span class="stat-label">Hackathon Champ</span>
        </div>
        <div class="stat">
          <span class="stat-value">8</span>
          <span class="stat-label">Published Works</span>
        </div>
        <div class="stat">
          <span class="stat-value">4</span>
          <span class="stat-label">Albums</span>
        </div>
      </div>
    </div>

    <!-- Image on right -->
    <div class="about-image-col">
      <div class="about-image">
        <img src="/images/headshot.jpg" alt="Dylan Shade" loading="lazy" />
      </div>
    </div>
  </div>
</section>

<style>
  .about-section {
    height: 100%;
    display: flex;
    align-items: center;
    padding: var(--space-8);
  }

  .about-layout {
    display: flex;
    gap: var(--space-12);
    align-items: center;
    max-width: 1100px;
    margin: 0 auto;
    width: 100%;
  }

  /* Image column */
  .about-image-col {
    flex: 0 0 320px;
  }

  .about-image {
    position: relative;
    overflow: hidden;
    border-radius: var(--radius-lg);
  }

  .about-image img {
    width: 110%;
    height: auto;
    display: block;
    filter: contrast(1.05) saturate(0.9);
    margin-left: -7%;
    margin-top: -7%;
  }

  

  /* Content column */
  .about-content {
    flex: 1;
    min-width: 0;
  }

  .about-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 700;
    margin: 0 0 var(--space-2);
    line-height: 1.1;
  }

  .about-tagline {
    font-size: 1rem;
    color: var(--color-accent-gold);
    margin: 0 0 var(--space-6);
    font-weight: 500;
  }

  .about-text {
    margin-bottom: var(--space-8);
  }

  .about-text p {
    font-size: 1rem;
    color: var(--color-ink-light);
    line-height: 1.7;
    margin: 0 0 var(--space-4);
  }

  .about-text p:last-child {
    margin-bottom: 0;
  }

  /* Stats row */
  .about-stats {
    display: flex;
    gap: var(--space-8);
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .stat-value {
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-ink);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-ink-muted);
  }

  /* Tablet */
  @media (max-width: 900px) {
    .about-layout {
      flex-direction: column;
      gap: var(--space-8);
      text-align: center;
    }

    .about-image-col {
      flex: none;
      width: 200px;
      order: -1; /* Image first on tablet */
    }

    .about-stats {
      justify-content: center;
      flex-wrap: wrap;
      gap: var(--space-6);
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .about-section {
      padding: var(--space-4);
      padding-bottom: calc(var(--space-16) + var(--space-4));
    }

    .about-layout {
      gap: var(--space-6);
    }

    .about-image-col {
      width: 160px;
    }

    .about-title {
      font-size: clamp(1.75rem, 8vw, 2.5rem);
    }

    .about-tagline {
      font-size: 0.875rem;
      margin-bottom: var(--space-4);
    }

    .about-text {
      margin-bottom: var(--space-6);
    }

    .about-text p {
      font-size: 0.875rem;
      margin-bottom: var(--space-3);
    }

    .about-stats {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-4);
    }

    .stat {
      align-items: center;
    }

    .stat-value {
      font-size: 1.5rem;
    }

    .stat-label {
      font-size: 0.5625rem;
    }
  }

  /* Extra small mobile */
  @media (max-width: 375px) {
    .about-image-col {
      width: 140px;
    }

    .about-stats {
      gap: var(--space-3);
    }

    .stat-value {
      font-size: 1.25rem;
    }
  }
</style>
