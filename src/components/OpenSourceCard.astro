---
interface Props {
  name: string;
  description: string;
  stars?: number;
  link: string;
}

const { name, description, stars, link } = Astro.props;
---

<a href={link} target="_blank" rel="noopener" class="oss-card card">
  <div class="oss-header">
    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="oss-icon">
      <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
    </svg>
    <h3 class="oss-name">{name}</h3>
    {stars !== undefined && stars > 0 && (
      <span class="oss-stars">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
        </svg>
        {stars}
      </span>
    )}
  </div>
  <p class="oss-description">{description}</p>
</a>

<style>
  .oss-card {
    display: block;
    padding: var(--space-5);
    height: 100%;
  }

  .oss-header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-3);
  }

  .oss-icon {
    color: var(--color-ink-muted);
    flex-shrink: 0;
  }

  .oss-name {
    font-size: 1rem;
    font-weight: 600;
    flex: 1;
  }

  .oss-stars {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    font-size: 0.75rem;
    color: var(--color-accent-gold);
  }

  .oss-description {
    font-size: 0.875rem;
    color: var(--color-ink-light);
    line-height: 1.5;
  }

  .oss-card:hover .oss-name {
    color: var(--color-accent-gold);
  }
</style>
