---
const stats = [
  { number: "25,000+", label: "Users Served" },
  { number: "2x", label: "Hackathon Champion" },
  { number: "85", label: "GitHub Repos" },
];
---

<section class="stat-bar">
  <div class="container">
    <div class="stats-grid">
      {stats.map(stat => (
        <div class="stat">
          <div class="stat-number">{stat.number}</div>
          <div class="stat-label">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .stat-bar {
    padding: var(--space-4) 0;
  }

  .stats-grid {
    display: flex;
    justify-content: flex-start;
    gap: var(--space-8);
  }

  @media (max-width: 640px) {
    .stats-grid {
      gap: var(--space-4);
    }
  }

  .stat {
    display: flex;
    align-items: baseline;
    gap: var(--space-2);
  }

  .stat-number {
    font-family: var(--font-display);
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    font-weight: 700;
    color: var(--color-ink);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.5625rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-ink-muted);
  }
</style>
