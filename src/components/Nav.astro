---
interface Props {
  panels?: string[];
}

const { panels = ['hero', 'work', 'timeline', 'creative', 'about', 'contact'] } = Astro.props;

const links = [
  { name: "Work", panel: 1 },
  { name: "Timeline", panel: 2 },
  { name: "Creative", panel: 3 },
  { name: "About", panel: 4 },
  { name: "Contact", panel: 5 },
];
---

<nav id="navbar" class="nav scrolled">
  <div class="container nav-container">
    <a href="#" class="logo" data-panel="0">DPS LABS</a>
    
    <div class="desktop-menu">
      {links.map((link, i) => (
        <a href="#" class="nav-link" data-panel={link.panel}>{link.name}</a>
      ))}
    </div>

    <button id="mobile-menu-btn" class="mobile-menu-btn" aria-label="Toggle menu">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>
  </div>

  <div id="mobile-menu" class="mobile-menu">
    {links.map(link => (
      <a href="#" class="mobile-nav-link" data-panel={link.panel}>{link.name}</a>
    ))}
  </div>
</nav>

<script>
  const nav = document.getElementById('navbar');
  const mobileBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const scroller = document.getElementById('horizontal-scroller');
  let isMenuOpen = false;

  function scrollToPanel(index: number) {
    if (!scroller) return;
    
    const panelWidth = window.innerWidth;
    scroller.scrollTo({
      left: index * panelWidth,
      behavior: 'smooth'
    });

    // Update indicators if they exist
    document.querySelectorAll('.panel-indicator').forEach((ind, i) => {
      ind.classList.toggle('active', i === index);
    });

    // Update nav links
    document.querySelectorAll('.nav-link').forEach((link) => {
      const linkPanel = link.getAttribute('data-panel');
      link.classList.toggle('active', linkPanel === String(index));
    });
  }

  // Handle nav link clicks
  document.querySelectorAll('.nav-link, .mobile-nav-link, .logo').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const panel = parseInt(link.getAttribute('data-panel') || '0');
      scrollToPanel(panel);
      
      // Close mobile menu if open
      if (isMenuOpen) {
        isMenuOpen = false;
        mobileBtn?.classList.remove('active');
        mobileMenu?.classList.remove('active');
      }
    });
  });

  // Mobile menu toggle
  mobileBtn?.addEventListener('click', () => {
    isMenuOpen = !isMenuOpen;
    mobileBtn.classList.toggle('active');
    mobileMenu?.classList.toggle('active');
  });
</script>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 64px;
    z-index: 1000;
    background: rgba(28, 25, 20, 0.9);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .nav-container {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-family: var(--font-sans);
    font-weight: 600;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
    color: var(--color-ink);
    text-transform: uppercase;
    z-index: 1001;
    cursor: pointer;
  }

  .logo:hover {
    color: var(--color-accent-gold);
  }

  .desktop-menu {
    display: none;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .desktop-menu {
      display: flex;
    }
  }

  .nav-link {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-ink-light);
    cursor: pointer;
    position: relative;
    padding-bottom: 4px;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-accent-gold);
    transition: width var(--duration-fast) var(--ease-default);
  }

  .nav-link:hover {
    color: var(--color-accent-gold);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link.active {
    color: var(--color-accent-gold);
  }

  .nav-link.active::after {
    width: 100%;
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: flex;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
    z-index: 1001;
  }

  @media (min-width: 768px) {
    .mobile-menu-btn {
      display: none;
    }
  }

  .hamburger-line {
    width: 24px;
    height: 2px;
    background-color: var(--color-ink);
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .mobile-menu-btn.active .hamburger-line:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .mobile-menu-btn.active .hamburger-line:nth-child(2) {
    transform: translateY(-0px) rotate(-45deg);
  }
  
  /* Mobile Overlay */
  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: var(--color-paper);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-8);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 1000;
  }

  .mobile-menu.active {
    opacity: 1;
    pointer-events: all;
  }

  .mobile-nav-link {
    font-family: var(--font-display);
    font-size: 2rem;
    color: var(--color-ink);
    cursor: pointer;
  }

  .mobile-nav-link:hover {
    color: var(--color-accent-gold);
  }
</style>
