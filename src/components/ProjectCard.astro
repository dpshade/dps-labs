---
interface Props {
  name: string;
  tagline: string;
  description: string;
  stat: string;
  statNote?: string;
  tech: string[];
  logo?: string;
  screenshot?: string;
  link?: string;
  imagePosition?: string;
}

const { name, tagline, description, stat, statNote, tech, logo, screenshot, link, imagePosition = "top" } = Astro.props;
---

<article class="project-card card">
  {screenshot && (
    <div class="card-image">
      <img src={screenshot} alt={`${name} screenshot`} loading="lazy" style={`object-position: ${imagePosition};`} />
    </div>
  )}
  
  <div class="card-content">
    <div class="card-header">
      {logo && <img src={logo} alt={`${name} logo`} class="card-logo" />}
      <h3 class="card-title">{name}</h3>
    </div>
    
    <p class="card-tagline">{tagline}</p>
    <p class="card-description">{description}</p>
    
    <div class="card-stat">
      {stat}
      {statNote && <span class="stat-note"> Â· {statNote}</span>}
    </div>
    
    <div class="card-footer">
      <div class="card-tags">
        {tech.map(t => <span class="tag">{t}</span>)}
      </div>
      
      {link && (
        <a href={link} target="_blank" rel="noopener" class="card-link">
          View
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7" />
          </svg>
        </a>
      )}
    </div>
  </div>
</article>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
  }

  .card-image {
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: var(--color-paper-dark);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
    transition: transform var(--duration-slow) var(--ease-out);
  }

  .project-card:hover .card-image img {
    transform: scale(1.03);
  }

  .card-content {
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-2);
  }

  .card-logo {
    width: 32px;
    height: 32px;
    border-radius: var(--radius-md);
    object-fit: cover;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
  }

  .card-tagline {
    font-size: 0.875rem;
    color: var(--color-ink-muted);
    margin-bottom: var(--space-3);
  }

  .card-description {
    font-size: 0.9375rem;
    color: var(--color-ink-light);
    line-height: 1.6;
    margin-bottom: var(--space-4);
    flex: 1;
  }

  .card-stat {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-accent-gold);
    margin-bottom: var(--space-4);
  }

  .stat-note {
    font-weight: 400;
    color: var(--color-ink-muted);
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: var(--space-4);
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-ink-muted);
    white-space: nowrap;
  }

  .card-link:hover {
    color: var(--color-accent-gold);
  }

  .card-link svg {
    transition: transform var(--duration-fast) var(--ease-default);
  }

  .card-link:hover svg {
    transform: translateX(2px);
  }
</style>
