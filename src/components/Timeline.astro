---
const timeline = [
  {
    year: "2025",
    company: "Forward Research (Arweave)",
    role: "Software Engineer",
    highlights: [
      "Designed HyperBEAM docs platform with automated deployment pipelines",
      "Built AI-driven documentation system for the permaweb ecosystem",
      "Major contributions to AO Cookbook documentation",
      "Served as Hackathon Judge for AO ecosystem"
    ]
  },
  {
    year: "2023–2025",
    company: "JPMorgan Chase",
    role: "Software Engineer",
    highlights: [
      "Fully migrated on-prem application to AWS public cloud",
      "Developed LLM-powered data retrieval systems serving thousands of developers"
    ],
    subsections: [
      {
        title: "Hackathon Champion 2024",
        description: "RAG-based threat intelligence chatbot for security analysts"
      },
      {
        title: "Hackathon Champion 2023",
        description: "Natural language to SQL for threat intel data querying"
      }
    ]
  },
  {
    year: "2023",
    company: "AWS",
    role: "Certified Cloud Practitioner",
    highlights: []
  },
  {
    year: "2023",
    company: "Stantec",
    role: "Data Scientist",
    highlights: [
      "Developed custom DBScan clustering model for spatial data analysis",
      "Created model testing dashboard used by entire data science team",
      "Applied anomaly detection algorithms to enhance data quality"
    ]
  },
  {
    year: "2022",
    company: "CSI",
    role: "Software Developer",
    highlights: [
      "Full-stack development on enterprise applications"
    ]
  },
  {
    year: "2021",
    company: "OpenText",
    role: "Software Developer",
    highlights: [
      "Contributed to enterprise content management solutions"
    ]
  },
  {
    year: "2019–2023",
    company: "University of Kentucky",
    role: "BS Computer Science, Minor in Music",
    highlights: [
      "Resident Advisor — student mentor and resource connector (2020–2022)"
    ]
  }
];
---

<section id="timeline" class="section section-alt">
  <div class="container">
    <div class="section-header">
      <span class="section-label">Experience</span>
      <h2 class="section-title">Professional Timeline</h2>
    </div>
    
    <div class="timeline">
      {timeline.map(item => (
        <div class="timeline-item">
          <div class="timeline-year">{item.year}</div>
          <div class="timeline-content">
            <h3 class="timeline-company">{item.company}</h3>
            <span class="timeline-role">{item.role}</span>
            {item.highlights.length > 0 && (
              <ul class="timeline-highlights">
                {item.highlights.map(h => <li>{h}</li>)}
              </ul>
            )}
            {item.subsections && (
              <div class="timeline-subsections">
                {item.subsections.map(sub => (
                  <div class="timeline-subsection">
                    <span class="subsection-title">{sub.title}</span>
                    <span class="subsection-desc">{sub.description}</span>
                  </div>
                ))}
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .section-header {
    margin-bottom: var(--space-12);
  }

  .section-label {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-accent-gold);
    margin-bottom: var(--space-3);
  }

  .section-title {
    font-size: clamp(1.75rem, 4vw, 2.25rem);
  }

  .timeline {
    position: relative;
    padding-left: var(--space-8);
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 8px;
    bottom: 8px;
    width: 1px;
    background: var(--color-border);
  }

  .timeline-item {
    position: relative;
    padding-bottom: var(--space-12);
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    left: calc(-1 * var(--space-8) - 4px);
    top: 8px;
    width: 9px;
    height: 9px;
    background: var(--color-accent-gold);
    border-radius: 50%;
  }

  .timeline-year {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-accent-gold);
    margin-bottom: var(--space-2);
  }

  .timeline-company {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--space-1);
  }

  .timeline-role {
    font-size: 0.875rem;
    color: var(--color-ink-muted);
    display: block;
    margin-bottom: var(--space-4);
  }

  .timeline-highlights {
    list-style: none;
  }

  .timeline-highlights li {
    position: relative;
    padding-left: var(--space-5);
    margin-bottom: var(--space-2);
    font-size: 0.9375rem;
    color: var(--color-ink-light);
    line-height: 1.5;
  }

  .timeline-highlights li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: var(--color-ink-muted);
  }

  .timeline-subsections {
    margin-top: var(--space-4);
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .timeline-subsection {
    padding: var(--space-3) var(--space-4);
    background: var(--color-surface);
    border-left: 2px solid var(--color-accent-gold);
    border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
  }

  .subsection-title {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-accent-gold);
    margin-bottom: var(--space-1);
  }

  .subsection-desc {
    font-size: 0.8125rem;
    color: var(--color-ink-light);
  }

  @media (max-width: 640px) {
    .timeline {
      padding-left: var(--space-6);
    }

    .timeline-item::before {
      left: calc(-1 * var(--space-6) - 4px);
    }
  }
</style>
