---
const email = "dylanpriceshade@icloud.com";
const github = "https://github.com/dpshade";
const linkedin = "https://www.linkedin.com/in/dylan-shade";
---

<section class="contact-section">
  <!-- Decorative background elements -->
  <div class="contact-bg">
    <div class="bg-gradient"></div>
    <div class="bg-grid"></div>
  </div>

  <div class="contact-layout">
    <!-- Left side: Large CTA -->
    <div class="contact-main">
      <div class="contact-header">
        <span class="contact-label">Get in Touch</span>
        <h2 class="contact-title">
          <span class="title-line">Let's build</span>
          <span class="title-line title-accent">something great</span>
        </h2>
      </div>
      
      <p class="contact-description">
        Have a project in mind? Looking for a collaborator? 
        I'm always open to discussing new opportunities and ideas.
      </p>
      
      <a href={`mailto:${email}`} class="contact-cta">
        <span class="cta-text">Start a Conversation</span>
        <span class="cta-arrow">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7" />
          </svg>
        </span>
      </a>
    </div>

    <!-- Right side: Links + Info -->
    <div class="contact-sidebar">
      <div class="sidebar-section">
        <span class="sidebar-label">Connect</span>
        <div class="social-links">
          <a href={github} target="_blank" rel="noopener" class="social-link">
            <span class="social-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </span>
            <span class="social-name">GitHub</span>
            <span class="social-handle">@dpshade</span>
          </a>
          
          <a href={linkedin} target="_blank" rel="noopener" class="social-link">
            <span class="social-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </span>
            <span class="social-name">LinkedIn</span>
            <span class="social-handle">/dylan-shade</span>
          </a>
        </div>
      </div>

      <div class="sidebar-section">
        <span class="sidebar-label">Direct</span>
        <a href={`mailto:${email}`} class="email-link">
          <span class="email-text">{email}</span>
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7 17L17 7M17 7H7M17 7V17" />
          </svg>
        </a>
      </div>

      <div class="sidebar-section sidebar-stats">
        <div class="stat-item">
          <span class="stat-number">25K+</span>
          <span class="stat-desc">Users served</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">2x</span>
          <span class="stat-desc">Hackathon wins</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    position: relative;
    min-height: calc(100vh - 160px);
    display: flex;
    align-items: center;
    padding: var(--space-8);
    overflow: hidden;
  }

  /* Background decorative elements */
  .contact-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .bg-gradient {
    position: absolute;
    top: -50%;
    right: -20%;
    width: 80%;
    height: 150%;
    background: radial-gradient(
      ellipse at center,
      rgba(212, 165, 116, 0.06) 0%,
      rgba(212, 165, 116, 0.02) 40%,
      transparent 70%
    );
    animation: gradientPulse 8s ease-in-out infinite;
  }

  @keyframes gradientPulse {
    0%, 100% { opacity: 0.6; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.05); }
  }

  .bg-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(var(--color-border-subtle) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-border-subtle) 1px, transparent 1px);
    background-size: 60px 60px;
    opacity: 0.3;
    mask-image: radial-gradient(ellipse at 70% 50%, black 20%, transparent 70%);
  }

  /* Main layout */
  .contact-layout {
    display: flex;
    gap: var(--space-16);
    max-width: 1100px;
    margin: 0 auto;
    width: 100%;
    position: relative;
    z-index: 1;
  }

  /* Left column - main CTA */
  .contact-main {
    flex: 1.5;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .contact-header {
    margin-bottom: var(--space-6);
  }

  .contact-label {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-accent-gold);
    margin-bottom: var(--space-3);
    opacity: 0;
    transform: translateY(10px);
    animation: fadeSlideUp 500ms var(--ease-out) 100ms forwards;
  }

  .contact-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.15;
    margin: 0;
  }

  .title-line {
    display: block;
    opacity: 0;
    transform: translateY(20px);
  }

  .title-line:first-child {
    animation: fadeSlideUp 600ms var(--ease-out) 200ms forwards;
  }

  .title-accent {
    color: var(--color-accent-gold);
    font-style: italic;
    font-weight: 400;
    animation: fadeSlideUp 600ms var(--ease-out) 300ms forwards;
  }

  @keyframes fadeSlideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .contact-description {
    font-size: 1.0625rem;
    color: var(--color-ink-light);
    line-height: 1.65;
    margin-bottom: var(--space-8);
    max-width: 480px;
    opacity: 0;
    animation: fadeSlideUp 600ms var(--ease-out) 400ms forwards;
  }

  /* CTA Button */
  .contact-cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4) var(--space-6);
    background: var(--color-accent-gold);
    color: var(--color-paper);
    border-radius: var(--radius-full);
    font-size: 0.9375rem;
    font-weight: 600;
    text-decoration: none;
    transition: 
      transform 200ms var(--ease-out),
      box-shadow 200ms var(--ease-out),
      background 200ms var(--ease-out);
    opacity: 0;
    animation: fadeSlideUp 600ms var(--ease-out) 500ms forwards;
    width: fit-content;
  }

  .contact-cta:hover {
    background: var(--color-accent-gold-hover);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(212, 165, 116, 0.3);
  }

  .cta-arrow {
    display: flex;
    transition: transform 200ms var(--ease-out);
  }

  .contact-cta:hover .cta-arrow {
    transform: translateX(4px);
  }

  /* Right column - sidebar */
  .contact-sidebar {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    justify-content: center;
    padding-left: var(--space-8);
    border-left: 1px solid var(--color-border-subtle);
  }

  .sidebar-section {
    opacity: 0;
    animation: fadeSlideUp 500ms var(--ease-out) forwards;
  }

  .sidebar-section:nth-child(1) { animation-delay: 600ms; }
  .sidebar-section:nth-child(2) { animation-delay: 700ms; }
  .sidebar-section:nth-child(3) { animation-delay: 800ms; }

  .sidebar-label {
    display: block;
    font-size: 0.5625rem;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-ink-muted);
    margin-bottom: var(--space-3);
  }

  /* Social links */
  .social-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background: var(--color-surface);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: 
      background 200ms var(--ease-out),
      transform 200ms var(--ease-out);
  }

  .social-link:hover {
    background: var(--color-elevated);
    transform: translateX(4px);
  }

  .social-icon {
    display: flex;
    color: var(--color-ink-muted);
    transition: color 200ms;
  }

  .social-link:hover .social-icon {
    color: var(--color-accent-gold);
  }

  .social-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-ink);
  }

  .social-handle {
    font-size: 0.75rem;
    color: var(--color-ink-muted);
    margin-left: auto;
  }

  /* Email link */
  .email-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--color-ink-light);
    text-decoration: none;
    transition: color 200ms;
  }

  .email-link:hover {
    color: var(--color-accent-gold);
  }

  .email-link svg {
    opacity: 0;
    transform: translate(-4px, 4px);
    transition: all 200ms var(--ease-out);
  }

  .email-link:hover svg {
    opacity: 1;
    transform: translate(0, 0);
  }

  /* Stats */
  .sidebar-stats {
    display: flex;
    gap: var(--space-6);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .stat-number {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-ink);
    line-height: 1;
  }

  .stat-desc {
    font-size: 0.625rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-ink-muted);
  }

  /* Mobile responsive */
  @media (max-width: 900px) {
    .contact-layout {
      flex-direction: column;
      gap: var(--space-10);
    }

    .contact-sidebar {
      padding-left: 0;
      border-left: none;
      border-top: 1px solid var(--color-border-subtle);
      padding-top: var(--space-8);
      flex-direction: row;
      flex-wrap: wrap;
    }

    .sidebar-section {
      flex: 1;
      min-width: 180px;
    }

    .sidebar-stats {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .contact-section {
      padding: var(--space-4);
    }

    .contact-title {
      font-size: clamp(1.75rem, 8vw, 2.5rem);
    }

    .contact-description {
      font-size: 0.9375rem;
    }

    .contact-cta {
      width: 100%;
      justify-content: center;
    }

    .contact-sidebar {
      flex-direction: column;
    }

    .sidebar-section {
      width: 100%;
    }

    .sidebar-stats {
      justify-content: space-between;
    }

    .bg-grid {
      display: none;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .contact-label,
    .title-line,
    .contact-description,
    .contact-cta,
    .sidebar-section {
      animation: none;
      opacity: 1;
      transform: none;
    }

    .bg-gradient {
      animation: none;
    }
  }
</style>
